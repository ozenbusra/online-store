<h1><%= @item.item_name %></h1>

<% if @store_items.exists? %>
    <h2>Stores</h1>
    <%= render :partial => 'shared/store_items_index', store_items: @store_items %>
<% else %>
    <p>This item does not exist in any store</p>
<% end %>

<% if current_user.admin? %>
    <p> <%= link_to "Add to Store", new_store_item_path(item_id: @item.id) %> </p>
<% end %>