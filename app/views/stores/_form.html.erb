<%= form_with model: store do |form| %>
  <div>
    <%= form.label :store_name %><br>
    <%= form.text_field :store_name %>
    <% store.errors.full_messages_for(:store_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :location %><br>
    <%= form.collection_select(:location_id, Location.all, :id, :location_details) %>
    <% store.errors.full_messages_for(:location).each do |message| %>
      <div><%= message %></div>
    <% end %>  
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
